<div class="circle">
  <% if !@guesses[index].empty? %>
    <img src="/images/<%=@guesses[index][0]%>_ball.png" alt="<%=@guesses[index][0]%> ball">
  <% end %>
</div>
<div class="circle">
  <% if !@guesses[index].empty? %>
    <img src="/images/<%=@guesses[index][1]%>_ball.png" alt="<%=@guesses[index][1]%> ball">
  <% end %>
</div>
<div class="circle">
  <% if !@guesses[index].empty? %>
    <img src="/images/<%=@guesses[index][2]%>_ball.png" alt="<%=@guesses[index][2]%> ball">
  <% end %>
</div>
<div class="circle">
  <% if !@guesses[index].empty? %>
    <img src="/images/<%=@guesses[index][3]%>_ball.png" alt="<%=@guesses[index][3]%> ball">
  <% end %>
</div>
<div class="feedback">
  <div class="feedback_circle"
    <% case @feedback[index][0]
    when "+" %>
    style="background:red;"
    <% when "-" %>
    style="background:white;"
    <% end %>
  >
  </div>
  <div class="feedback_circle"
    <% case @feedback[index][1]; when "+" %>
    style="background:red;"
    <% when "-" %>
    style="background:white;"
    <% end %>
  >
  </div>
  <div class="feedback_circle"
    <% case @feedback[index][2]; when "+" %>
    style="background:red;"
    <% when "-" %>
    style="background:white;"
    <% end %>
  >
  </div>
  <div class="feedback_circle"
    <% case @feedback[index][3]; when "+" %>
    style="background:red;"
    <% when "-" %>
    style="background:white;"
    <% end %>
  >
  </div>
</div>
